/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  margin-bottom: 16rpx;
  background: #fff;
  padding-bottom: 6rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}

.active {
  color: red;
}

.active text {
  font-size: 32rpx;
  padding: 20rpx 16rpx;
  border-bottom: 6rpx solid red;
}



