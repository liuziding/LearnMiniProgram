<!-- 1.input 的基本使用 -->
<input />

<!-- 2.value: input中的默认值 -->
<input value="哈哈哈" />

<!-- 3.type: 决定键盘类型（文本输入键盘） -->
<input type="number" />

<!-- 4.password: 暗文 -->
<input type="password" />

<!-- 5.placeholder: 占位文字 -->
<input placeholder="请输入内容" />

<!-- 6.input绑定事件 -->
<input bindinput="handleInput"
       bindfocus="handleFocus" 
       bindblur="handleBlur" />


<view>{{content}}</view>





